<%= turbo_stream.append :foo do %>
  <% @posts.each do |post| %>
    <p>
      <strong>
        <%= post.title %>
      </strong>
    </p>
    <p>
      <%= post.body %>
    </p>
  <% end %>
<% end %>

<%= turbo_stream.replace :frame_identifier do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :frame_identifier, 
      loading: :lazy,
      src: posts2_index_path(format: :turbo_stream, page: @pagy.next)
    %>
  <% end %>
<% end %>
