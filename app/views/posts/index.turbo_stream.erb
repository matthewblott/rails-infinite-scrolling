<%= turbo_stream.append :posts do %>
  <%= render @posts %>
<% end %>

<%= turbo_stream.replace :frame_identifier do %>
  <% if @pagy.next.present? %>

    <%= turbo_frame_tag :frame_identifier, 
      loading: :lazy,
      src: posts_path(format: :turbo_stream, page: @pagy.next)
    %>

  <% end %>
<% end %>
