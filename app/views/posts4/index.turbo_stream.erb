<%= turbo_stream.append :foo do %>
  <% @posts.each do |post| %>
    <row>
      <cell>
        <%= post.id %>
      </cell>
      <cell>
        <%= post.title %>
      </cell>
    </row>
  <% end %>
<% end %>

<%= turbo_stream.replace :foo2 do %>
  <% if @pagy.next.present? %>
    <%= turbo_frame_tag :foo2, 
      loading: :lazy,
      src: posts4_index_path(format: :turbo_stream, page: @pagy.next)
    %>
  <% end %>
<% end %>
